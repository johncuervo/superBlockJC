<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Posts</h1>
      <div class="blogInnerWrapper">
        <div class="thumbnail blogInner ">

          <% @posts.each do |post| %>
            <div class="caption">
              <h3><%= link_to post.title, post %></h3>
              <h6><%= time_ago_in_words(post.created_at)  %> por <a href="#"><%= post.user.email %></a></h6>
              <p>
                <% if post.content.length > 250 %>
                <%= markdown(truncate(post.content, length: 250)) %>
                <%= link_to "más...", post %>
                <% else %>
                <%= post.content %>
                <% end %>
              </p>
            </div>
            <div>
              <% if user_signed_in? && current_user.id == post.user_id %>
                <%= link_to "Editar", edit_post_path(post) %>
                <%= link_to "Eliminar", post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>
              <% end %>
              <div class="post-comments">
                <span class="glyphicon glyphicon-comment">Comentarios:</span>
                <span class="comment-count"><%= post.comments.count %></span>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
