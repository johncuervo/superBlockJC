<div class="container">
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Posts</h1>
    <% if user_signed_in? %>
      <div class="form-group mgnBtm0">
        <%= link_to "New Post", new_post_path, class: "btn btn-dark"  %>
      </div>
    <% end %>


    <% @posts.each do |post| %>
      <div class="caption">
        <h3><%= link_to post.title, post %></h3>
        <h6><%= time_ago_in_words(post.created_at)  %> ago by <a href="#"><%= post.user.email %></a></h6>

        <p>
          <% if post.content.length > 250 %>
          <%= truncate(post.content, length: 250) %>
          <%= link_to "more...", post %>
          <% else %>
          <%= post.content %>
          <% end %>
        </p>
      </div>
      <div>
        <% if user_signed_in? %>
        <%= link_to "Edit Article", edit_post_path(post) %>
        <%= link_to "Delete Article", post, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
</div>
