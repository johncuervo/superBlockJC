<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>

      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>

        <div class="form-group">
          <%= f.text_area :content, class: "form-control input-lg", placeholder: "Ingresa la descripciÃ³n del producto" %>
        </div>
        <div>
          <%= f.submit form_title %>
        </div>
      <% end %>
    </div>
  </div>
</div>
