<div class="container log">
  <div class="row justify-content-center">
    <div class="col-md-5 sesion">
      <!-- <form class="login-form"> -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
        <p class="login-text">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
          </span>
        </p>
        <!-- <input type="email" class="login-username" autofocus="true" required="true" placeholder="Email" /> -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-username", placeholder: "Email" %>
        <!-- <input type="password" class="login-password" required="true" placeholder="Password" /> -->
          <%= f.password_field :password, autocomplete: "current-password", class: "login-password", placeholder: "Contraseña" %>

          <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <div class="col-md-6">
              <%= f.check_box :remember_me %>
              <%= f.label "Recordarme", class: "label" %>
            </div>
          </div>
          <% end %>
        <!-- <input type="submit" name="Login" value="Login" class="login-submit" /> -->
        <%= f.submit "Iniciar Sesión", class: "login-submit" %>
      <!-- </form> -->
        <% end %>
        <%= render "devise/shared/links" %>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <div class="underlay-photo"></div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <div class="underlay-black"></div>

    </div>
  </div>
</div>
