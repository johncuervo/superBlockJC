<div class="container log">
  <div class="row justify-content-center">
    <div class="col-md-5 sesion">
      <!-- <form class="login-form"> -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "login-form") do |f| %>

        <p class="login-text">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
          </span>
        </p>
        <%= render "devise/shared/error_messages", resource: resource %>
        <!-- <input type="email" class="login-username" autofocus="true" required="true" placeholder="Email" /> -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-username", placeholder: "Email" %>
        <!-- <input type="password" class="login-password" required="true" placeholder="Password" /> -->
        <% if @minimum_password_length %>
        <em class="label">(<%= @minimum_password_length %> caracteres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "login-password", placeholder: "ContraseÃ±a" %>

        <%=  f.password_field :password_confirmation, autocomplete: "new-password", class: "login-password", placeholder: "Confirmar contraseÃ±a " %>

        <!-- <input type="submit" name="Login" value="Login" class="login-submit" /> -->
        <%= f.submit "Registrarse", class: "login-submit" %>
      <!-- </form> -->
        <% end %>
        <%= render "devise/shared/links" %>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <div class="underlay-photo"></div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <div class="underlay-black"></div>

    </div>
  </div>
</div>
