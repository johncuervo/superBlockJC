<div class="container log">
  <div class="row justify-content-center">
    <div class="col-md-5 sesion">
      <h2>Olvidaste tu contraseña?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "login-form") do |f| %>
        <p class="login-text">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
          </span>
        </p>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-username", placeholder: "Email" %>

        <%= f.submit "Enviar instrucciones para cambio de contraseña", class: "login-submit" %>
      <% end %>
      <%= render "devise/shared/links" %>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <div class="underlay-photo"></div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        <div class="underlay-black"></div>

    </div>
  </div>
</div>
